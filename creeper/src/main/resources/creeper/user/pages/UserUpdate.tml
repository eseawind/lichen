<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">     
<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"> 
<t:layout>
<form t:type="form" t:id="userUpdateForm" >
 	<t:errors/>
 	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">修改</h3>
	  </div>
	  <div class="panel-body">
	    <div class="input-group">
		  <span class="input-group-addon">用户名：</span>
		  <input class="form-control" t:type="textfield" t:value="user.username" label="用户名" t:validate="required" />
		</div>
		<div class="input-group">
		  <span class="input-group-addon">密码：</span>
		  <input class="form-control" t:type="textfield"  t:value="user.password" label="密码" t:validate="required" />
		</div>
		<div class="input-group">
		  <span class="input-group-addon">姓名：</span>
		  <input class="form-control" t:type="textfield" t:value="user.name" label="姓名" t:validate="required" />
		</div>
		<br/>
		<div class="btn-group">
		  <button type="submit" class="btn btn-default">保存</button>
		  <button type="reset" class="btn btn-default">重置</button>
		</div>
	  </div>
	</div>
</form>
</t:layout>
</html>
