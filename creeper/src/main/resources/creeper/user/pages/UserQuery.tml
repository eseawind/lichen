<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">     
<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
<t:layout>
<form t:type="form" t:id="queryUserForm" >
 	<t:errors/>
 	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">用户查询</h3>
	  </div>
	  <div class="panel-body">
	  	<div class="input-group">
		  <span class="input-group-addon">ID：</span>
		  <input class="form-control" t:type="textfield" t:value="user.id" label="ID" />
		</div>
	    <div class="input-group">
		  <span class="input-group-addon">用户名：</span>
		  <input class="form-control" t:type="textfield" t:value="user.name" label="用户名" />
		</div>
		<div class="input-group">
		  <span class="input-group-addon">密码：</span>
		  <input class="form-control" t:type="textfield"  t:value="user.pass" label="密码" />
		</div>
		<br/>
		<div class="btn-group">
		  <button type="submit" class="btn btn-default">查询</button>
		  <button type="reset" class="btn btn-default">重置</button>
		</div>
	  </div>
	</div>
</form>
</t:layout>  
</html>
